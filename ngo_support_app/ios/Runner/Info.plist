<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Beacon of New Beginnings</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>BeaconNewBeginnings</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<!-- Location permissions for emergency features -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Beacon of New Beginnings needs location access to provide emergency assistance and connect you with nearby resources when you need help.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>Beacon of New Beginnings needs location access to provide emergency assistance and send your location to emergency contacts when needed.</string>
	<key>NSLocationAlwaysUsageDescription</key>
	<string>Beacon of New Beginnings needs background location access to provide emergency assistance even when the app is not actively being used.</string>
	
	<!-- Phone permissions for emergency calling -->
	<key>NSPhoneCallUsageDescription</key>
	<string>Beacon of New Beginnings needs phone access to connect you directly with emergency services and support hotlines.</string>
	
	<!-- Camera permissions for case documentation -->
	<key>NSCameraUsageDescription</key>
	<string>Beacon of New Beginnings needs camera access to allow secure documentation of evidence when reporting cases (optional).</string>
	
	<!-- Photo library permissions -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Beacon of New Beginnings needs photo library access to attach images to case reports (optional).</string>
	
	<!-- Microphone permissions for recordings -->
	<key>NSMicrophoneUsageDescription</key>
	<string>Beacon of New Beginnings needs microphone access for optional voice recordings in case documentation.</string>
	
	<!-- App Store submission requirements -->
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>
	
	<!-- Privacy policy URL -->
	<key>NSAppPrivacyPolicyURL</key>
	<string>https://beaconnewbeginnings.org/privacy</string>
</dict>
</plist>
